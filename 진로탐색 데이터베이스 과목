-- 카테고리 테이블
CREATE TABLE Categories (
    category_id 
    categor

  
INT PRIMARY KEY,
    category_name 
    category_nam

    cate
VARCHAR(255) NOT NULL
);

-- 과목 테이블

CREA
CREATE TABLE Subjects (
    subject_id 
    s
INT PRIMARY KEY,
    subject_name 
    subject_nam

 
VARCHAR(255) NOT NULL,
    category_id 
    category
INT,
    
 
FOREIGN KEY (category_id) REFERENCES Categories(category_id)
);

-- 추천 테이블
CREATE TABLE Recommendations (
    recommendation_id 
    recommendat

   
INT PRIMARY KEY,
    variable 
    variable
VARCHAR(1) NOT NULL,
    subject_id 
    subject_id

  
INT,
    FOREIGN KEY (subject_id) REFERENCES Subjects(subject_id)
);

