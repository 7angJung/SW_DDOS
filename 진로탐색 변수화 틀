import java.util.ArrayList;
import java.util.List;
import java.util.Random;

public class SubjectRecommendation {

    public static void main(String[] args) {
        // 변수에 해당하는 과목 리스트 초기화
        List<String> softwareDevelopment = initializeSoftwareDevelopmentSubjects();
        List<String> informationSecurity = initializeInformationSecuritySubjects();
        List<String> network = initializeNetworkSubjects();
        List<String> db = initializeDBSubjects();
        List<String> dataAnalysis = initializeDataAnalysisSubjects();
        List<String> embedded = initializeEmbeddedSubjects();
        List<String> webDevelopment = initializeWebDevelopmentSubjects();
        List<String> powerSystem = initializePowerSystemSubjects();
        List<String> others = initializeOthersSubjects();

        // 사용자가 선택한 변수에 따라 해당 과목 리스트에서 무작위로 추천
        String recommendedSubject = recommendSubject("A", softwareDevelopment);
        System.out.println("추천 과목: " + recommendedSubject);

        // 다른 변수에 대해서도 동일한 방식으로 추천할 수 있음
    }

    // 변수에 따라 과목 추천
    private static String recommendSubject(String variable, List<String> subjects) {
        Random random = new Random();

        // 사용자가 선택한 변수에 따라 해당 과목 리스트에서 무작위로 추천
        switch (variable) {
            case "A": case "a":
                return subjects.get(random.nextInt(subjects.size()));
            case "B": case "b":
                // B 변수에 해당하는 과목 리스트 반환
                return subjects.get(random.nextInt(subjects.size()));
            // 다른 변수에 대한 case 추가
            default:
                return "올바른 변수를 선택하세요.";
        }
    }

    // 각 변수에 해당하는 과목 리스트 초기화
    private static List<String> initializeSoftwareDevelopmentSubjects() {
        List<String> subjects = new ArrayList<>();
        subjects.add("창의 공학 설계");
        subjects.add("윈도우 프로그래밍");
        subjects.add("프로그래밍 언어론");
        // 다른 과목들 추가
        return subjects;
    }

    // 다른 변수에 대해서도 동일한 방식으로 초기화할 수 있음
}
